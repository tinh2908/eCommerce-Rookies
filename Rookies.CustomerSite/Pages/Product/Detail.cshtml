@page
@model Rookies.CustomerSite.Pages.Product.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ ViewData["Title"] = "Detail"; }

<h1>Detail</h1>

<h4>Product</h4>
<hr />
<div class="card-body table-bordered bg-light">
    <dl class="row">
        <div class="col-md-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                $@Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
        </div>
    </dl>
</div>
<form asp-page="./Detail/" asp-route-id="@Model.Product.Id" method="post">
    <input type="hidden" asp-for="Rating.ProductId" value="@Model.Product.Id" />
    <input type="number" asp-for="Rating.RatingScore" />
    <input type="submit" class="btn btn-primary" /> |
</form>
<div>
    <a class="btn btn-danger" href='javascript:history.go(-1)'>Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
