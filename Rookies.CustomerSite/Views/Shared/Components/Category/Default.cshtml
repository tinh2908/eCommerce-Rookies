@model IList<Rookies.CustomerSite.ViewModel.Category.CategoryVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Categories";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/menu.css" />
</head>
<body>
    <button type="button" class="menubutton" data-toggle="collapse" data-target="#demo">Simple Menu</button>
    <div class="menu collapse" id="demo">
        <table>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="col-6" asp-page="/Product/ProductByCate" asp-route-cateid="@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

