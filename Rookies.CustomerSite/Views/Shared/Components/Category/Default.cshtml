@model IList<Rookies.CustomerSite.ViewModel.Category.CategoryVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Categories";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/menu.css" />
</head>
<body>
    <div class="menu">
        <div class="btn card-title" data-toggle="collapse" data-target="#demo">Simple Menu</div>
        <div class="collapse" id="demo">
            <table>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="col-6" asp-page="/Product/ProductByCate" asp-route-cateid="@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

